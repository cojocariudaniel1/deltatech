<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="add_category_list_into_bar" inherit_id="website.snippets" name="Place category into bar">
        <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
            <t
                t-snippet="deltatech_website_snippets.snippet_category_list"
                t-thumbnail="/deltatech_website_snippets/static/src/img/snippets_thumbs/s_quote.png"
            />
        </xpath>
    </template>
    <template id="snippet_category_list" name="Category snippet">
        <section class="s_category_list pt16 pb16">
            <div class="container">
                <h2 class="text-center">Category</h2>
                <div
                    class="row s_col_no_bgcolor js_get_category"
                    data-loading="true"
                    data-template="deltatech_website_snippets.s_category_list_template"
                />
            </div>
        </section>
    </template>
    <template id="s_category_list_template">
        <div id="myCarousel_category">
            <div class="container">
                <t t-foreach="categories" t-as="category">
                    <div class="col-md-3 s_category_list">
                        <div class="thumbnail">
                            <a t-att-href="'/shop/category/%s' %slug(category)">
                                <span
                                    itemprop="image"
                                    t-attf-content="{{request.httprequest.url_root}}web/image/product.category/{{category.id}}/image/"
                                    t-field="category.image"
                                    t-options="{'widget': 'image', 'resize':'300x200'}"
                                    t-att-alt="category.name"
                                />
                            </a>
                            <div class="caption">
                                <a
                                    t-field="category.name"
                                    class="categ_name"
                                    t-att-href="'/shop/category/%s' %slug(category)"
                                />
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </template>
