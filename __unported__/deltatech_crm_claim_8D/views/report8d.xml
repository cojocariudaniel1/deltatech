<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_8d">
            <t t-name="deltatech_crm_claim_8D.report_8d">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="web.external_layout">
                            <div class="page">
                                <!--                                <span>Version: 11.0.1.1</span>-->
                                <h3>
                                    <span t-field="o.name" />
                                </h3>
                                <div class="row mt32">
                                    <div class="col-xs-4">
                                        <strong>Customer:</strong>
                                        <p t-field="o.partner_id" />
                                    </div>
                                    <div class="col-xs-4">
                                        <strong>Issued by:</strong>
                                        <p t-field="o.user_id" />
                                    </div>
                                    <div class="col-xs-4">
                                        <strong>Detected in:</strong>
                                        <p t-field="o.loc_detected" />
                                    </div>
                                </div>
                                <div class="row mb32">
                                    <div class="col-xs-2">
                                        <strong>Product:</strong>
                                        <p t-field="o.product_id.name" />
                                    </div>
                                    <div class="col-xs-2">
                                        <strong>Quantity rejected:</strong>
                                        <p t-field="o.quantity" />
                                    </div>
                                    <div class="col-xs-2">
                                        <strong>Quantity claimed:</strong>
                                        <p t-field="o.quantity_claimed" />
                                    </div>
                                    <div class="col-xs-2">
                                        <strong>Percent:</strong>
                                        <t t-if="o.quantity_claimed">
                                            <t t-set="percent" t-value="round((o.quantity/o.quantity_claimed)*100,2)" />
                                        </t>
                                        <t t-if="not o.quantity_claimed">
                                            <t t-set="percent" t-value="0" />
                                        </t>
                                        <t t-esc="percent" />%
                                        <p />
                                    </div>
                                    <div class="col-xs-2">
                                        <strong>Code:</strong>
                                        <p t-field="o.product_id.default_code" />
                                    </div>
                                </div>
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>1. Team:</span>
                                </h4>
                                <div class="row">
                                    <t t-foreach="o.user_ids" t-as="u">
                                        <div class="col-xs-2">
                                            <span t-field="u.name" />
                                            <p t-field="u.partner_id.function" />
                                        </div>
                                    </t>
                                </div>
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>2. Problem description:</span>
                                </h4>
                                <p t-field="o.description" />
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>3. Containment actions:</span>
                                </h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th width="60%">
                                                <strong>Action</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Responsible</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Date</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Status</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.action_containment_ids" t-as="l">
                                            <td>
                                                <span t-field="l.name" />
                                            </td>
                                            <td>
                                                <span t-field="l.user_id" />
                                            </td>
                                            <td>
                                                <span t-field="l.date_deadline" />
                                            </td>
                                            <td>
                                                <span t-field="l.state" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <t t-if="o.similar_affected">
                                    <span>Other similar products affected</span>
                                    <table class="table table-condensed">
                                        <thead>
                                            <tr>
                                                <th width="60%">
                                                    <span style="font-weight:bold">Product affected</span>
                                                </th>
                                                <th width="40%">
                                                    <span style="font-weight:bold">Quantity affected</span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.similar_affected_ids" t-as="l">
                                                <td>
                                                    <span t-field="l.product_id" />
                                                </td>
                                                <td>
                                                    <span t-field="l.quantity" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>4. Root causes:</span>
                                </h4>
                                <p t-field="o.cause" />
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>5. Permanent Corrective actions:</span>
                                </h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th width="60%">
                                                <strong>Action</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Responsible</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Date</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Status</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.action_corrective_ids" t-as="l">
                                            <td>
                                                <span t-field="l.name" />
                                            </td>
                                            <td>
                                                <span t-field="l.user_id" />
                                            </td>
                                            <td>
                                                <span t-field="l.date_deadline" />
                                            </td>
                                            <td>
                                                <span t-field="l.state" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>6. Effectiveness verification:</span>
                                </h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th width="60%">
                                                <strong>Action</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Responsible</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Date</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Status</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.action_verification_ids" t-as="l">
                                            <td>
                                                <span t-field="l.name" />
                                            </td>
                                            <td>
                                                <span t-field="l.user_id" />
                                            </td>
                                            <td>
                                                <span t-field="l.date_deadline" />
                                            </td>
                                            <td>
                                                <span t-field="l.state" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>7. Preventive actions:</span>
                                </h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th width="60%">
                                                <strong>Action</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Responsible</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Date</strong>
                                            </th>
                                            <th width="13%">
                                                <strong>Status</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.action_preventive_ids" t-as="l">
                                            <td>
                                                <span t-field="l.name" />
                                            </td>
                                            <td>
                                                <span t-field="l.user_id" />
                                            </td>
                                            <td>
                                                <span t-field="l.date_deadline" />
                                            </td>
                                            <td>
                                                <span t-field="l.state" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <h4>
                                    <span>8. Comments:</span>
                                </h4>
                                <p t-field="o.comments" />
                                <br />
                                <div style="border-bottom: 1px solid black;" />
                                <br />
                                <div class="row mt32 mb32" id="informations">
                                    <div class="col-xs-6">
                                        <strong>Closing Date:</strong>
                                        <p t-field="o.date_closed" />
                                    </div>
                                    <div class="col-xs-6">
                                        <strong>
                                            <p t-field="o.closed_by_user_id" />
                                        </strong>
                                        <p />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>
        <report
            string="Report 8D"
            id="action_report_8d"
            model="crm.claim"
            report_type="qweb-pdf"
            name="deltatech_crm_claim_8D.report_8d"
            file="deltatech_crm_claim_8D.report_8d"
        />
    </data>
</odoo>
