<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="maintenance_equipment_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button
                    class="oe_stat_button"
                    type="action"
                    name="%(analytic.account_analytic_line_action)d"
                    context="{'search_default_account_id':analytic_account_id}"
                    icon="fa-usd"
                    string="Cost/Revenue"
                    widget="statinfo"
                />
            </button>
            <field name="cost" position="after">
                <field
                    name="analytic_account_id"
                    groups="maintenance.group_equipment_manager"
                    context="{'default_name':name}"
                />
            </field>
        </field>
    </record>
    <!--    suprscrie valoare domeniu [('account_id','=',active_id)]-->
    <record id="analytic.account_analytic_line_action" model="ir.actions.act_window">
        <field name="domain">[]</field>
    </record>
</odoo>
